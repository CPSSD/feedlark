<% include partials/header.ejs %>

<div class="container">
  <div class="row s5">
  <nav class="center blue wave-effect waves-light">
    <ul id="nav-mobile" class="hide-on-med-and-down">
      <li><a href="/user">Home</a></li>
      <li><a href="/user/tokens">Plaintext</a></li>
    </ul>
  </nav>
  </div>

  <div class="row">
    <div class="col s6 offset-s3">
      <h4 class="center-align">These are your settings <%= user.username %>.</h4>
    </div>
  </div>
  <div class="row">
    <ul class="collection">
      <li class="center"><h4>Username: <%= user.username %></h4></li>
      <h5>Email</h5>
      <li>
        <p>Current email address: <%= user.email %></p>
      </li>
      <h5>Change your account email address:</h5>
      <p>You will need to reverify your email.</p>
      <li>
        <form class="col s12" method="POST" action="/user/change/email">
          <div class="input-field col s2">
            <input id="oldEmail" name="oldEmail" type="email" class="validate" required>
            <label for="oldPassword1">Enter old email</label>
          </div>
          <div class="input-field col s2">
            <input id="newEmail" name="newEmail" type="email" class="validate" required>
            <label for="oldPassword2">Enter new email</label>
          </div>
          <div class="input-field col s4">
            <button class="btn waves-effect waves-light" type="submit" name="changePassword">Change Email
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </li>
      <h5>Change password:</h5>
      <li>
        <form class="col s12" method="POST" action="/user/change/password">
          <div class="input-field col s2">
            <input id="oldPassword1" name="oldPassword1" type="password" class="validate" required>
            <label for="oldPassword1">Enter old password</label>
          </div>
          <div class="input-field col s2">
            <input id="newPassword" name="newPassword" type="password" class="validate" required>
            <label for="oldPassword2">Enter new Password</label>
          </div>
          <div class="input-field col s3">
            <input id="newPassword2" name="newPassword2" type="password" class="validate" required>
            <label for="newPassword">Confirm new Password</label>
          </div>
          <div class="input-field col s4">
            <button class="btn waves-effect waves-light" type="submit" name="changePassword">Change Password
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </li>
    </ul>
  </div>
</div>
<% include partials/footer.ejs %>
