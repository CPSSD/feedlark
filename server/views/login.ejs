<div class="container">
	<div class="row">
		<div class="col s12">
			<h3>Login</h3>
			<p> No account yet? Click <a href="/user/signup">here</a> to register</p>
		</div>
	</div>
	<div class="row">
		<form class="col s12" method="POST" action="/user/login">
			<div class="row">
				<div class="input-field col s6">
					<input id="email" name="email" type="email" class="validate" required autofocus>
					<label for="email">E-mail Address</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s6">
					<input id="password" name="password" type="password" class="validate" required>
					<label for="password">Password</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s6">
					<button class="btn waves-effect waves-light" type="submit" name="Login">Login
						<i class="material-icons right">send</i>
					</button>
				</div>
			</div>
		</form>
	</div>
</div>
